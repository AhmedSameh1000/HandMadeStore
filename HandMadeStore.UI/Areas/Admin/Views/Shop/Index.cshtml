                    <tr>
                        <th>
                            Name
                        </th>
                        <th class="text-center">
                            City
                        </th>
                        <th class="text-center">
                            Address
                        </th>
                        <th class="text-center">
                            PostalCode
                        </th>
                        <th class="text-center">
                            Phone
                        </th>
                        <th class="text-center">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
         </div>
    </div>

